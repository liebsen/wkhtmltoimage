[?- include ('./partials/header') ?]
[?- include ('./partials/navbar') ?]
  <section class="hero">
    <div class="hero-body">
      <div class="container">
        <div class="columns is-vcentered">
          <div class="column is-5 animated fadeIn">
            <h1 class="title">
              <span class="mdi mdi-creation has-text-success"></span>
              new<i>capture</i>
            </h1>
            <div class="field has-addons space-evenly">
              <input class="input is-large has-border-right-square" type="text" id="capture_url" placeholder="https://website.com" autofocus="autofocus" />
              <div class="control">
                <button onclick="capture()" class="button is-large is-success send-btn">
                  <span class="mdi mdi-creation"></span>
                </button>
              </div>
            </div>
          </div>
          <div class="column">
            <div class="control capture-container">
              <div class="capture-img animated delay skewInDesktop"></div>
              <img id="img_loader" src="" class="is-hidden" />
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/assets/js/capture.js"></script>
  </section>
